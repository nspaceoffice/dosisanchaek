---
import { getAllCategories } from '../lib/sanity';

const categories = await getAllCategories();
const pathname = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-background/95 backdrop-blur-sm border-b border-gray-100">
  <nav class="container-wide py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="group flex items-center gap-2">
        <span class="text-2xl font-serif font-bold text-primary group-hover:text-accent transition-colors">
          도시산책
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <a
          href="/posts"
          class:list={[
            "text-sm font-medium transition-colors",
            pathname === '/posts' ? 'text-accent' : 'text-secondary hover:text-primary'
          ]}
        >
          전체 글
        </a>
        <a
          href="/community"
          class:list={[
            "text-sm font-medium transition-colors",
            pathname.startsWith('/community') ? 'text-accent' : 'text-secondary hover:text-primary'
          ]}
        >
          커뮤니티
        </a>
        <a
          href="/about"
          class:list={[
            "text-sm font-medium transition-colors",
            pathname === '/about' ? 'text-accent' : 'text-secondary hover:text-primary'
          ]}
        >
          소개
        </a>

        <!-- Auth Buttons -->
        <div class="flex items-center gap-3 ml-4 pl-4 border-l border-gray-200">
          <div id="auth-loading" class="text-sm text-gray-400">...</div>
          <div id="auth-logged-out" class="hidden flex items-center gap-3">
            <a href="/auth/login" class="text-sm font-medium text-secondary hover:text-primary transition-colors">
              로그인
            </a>
            <a href="/auth/signup" class="text-sm font-medium px-4 py-1.5 bg-primary text-white rounded-full hover:bg-accent transition-colors">
              회원가입
            </a>
          </div>
          <div id="auth-logged-in" class="hidden flex items-center gap-3">
            <a href="/mypage" class="text-sm font-medium text-secondary hover:text-primary transition-colors">
              마이페이지
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-primary"
        aria-label="메뉴 열기"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-100 pt-4">
      <div class="flex flex-col gap-4">
        <a href="/posts" class="text-sm font-medium text-secondary hover:text-primary">전체 글</a>
        <a href="/community" class="text-sm font-medium text-secondary hover:text-primary">커뮤니티</a>
        <a href="/about" class="text-sm font-medium text-secondary hover:text-primary">소개</a>
        <div class="border-t border-gray-100 pt-4 mt-2">
          <div id="mobile-auth-logged-out" class="hidden flex flex-col gap-3">
            <a href="/auth/login" class="text-sm font-medium text-secondary hover:text-primary">로그인</a>
            <a href="/auth/signup" class="text-sm font-medium text-secondary hover:text-primary">회원가입</a>
          </div>
          <div id="mobile-auth-logged-in" class="hidden">
            <a href="/mypage" class="text-sm font-medium text-secondary hover:text-primary">마이페이지</a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  import { getUser } from '../lib/supabase';

  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Auth state
  async function checkAuth() {
    const authLoading = document.getElementById('auth-loading');
    const authLoggedOut = document.getElementById('auth-logged-out');
    const authLoggedIn = document.getElementById('auth-logged-in');
    const mobileAuthLoggedOut = document.getElementById('mobile-auth-logged-out');
    const mobileAuthLoggedIn = document.getElementById('mobile-auth-logged-in');

    const user = await getUser();

    authLoading?.classList.add('hidden');

    if (user) {
      authLoggedIn?.classList.remove('hidden');
      mobileAuthLoggedIn?.classList.remove('hidden');
    } else {
      authLoggedOut?.classList.remove('hidden');
      mobileAuthLoggedOut?.classList.remove('hidden');
    }
  }

  checkAuth();
</script>
