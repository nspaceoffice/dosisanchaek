---
import { urlFor, type Post } from '../lib/sanity';

interface Props {
  post: Post;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;

const formattedDate = new Date(post.publishedAt).toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const imageUrl = post.mainImage
  ? urlFor(post.mainImage)
      .width(featured ? 1200 : 600)
      .height(featured ? 800 : 400)
      .format('webp')
      .url()
  : '/placeholder.jpg';
---

<article class:list={["group hover-lift", featured ? "featured-card" : ""]}>
  <a href={`/posts/${post.slug.current}`} class="block">
    <div class:list={[
      "relative overflow-hidden rounded-lg",
      featured ? "aspect-[4/3] md:aspect-[16/10]" : "aspect-[4/3]"
    ]}>
      <img
        src={imageUrl}
        alt={post.title}
        class="image-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-transparent" />

      <!-- Category Badge -->
      {post.category && (
        <span class="absolute top-4 left-4 px-3 py-1 bg-accent text-white text-xs font-medium rounded-full">
          {post.category.title}
        </span>
      )}

      <!-- Video Icon -->
      {post.videoUrl && (
        <div class="absolute top-4 right-4 w-10 h-10 bg-white/90 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
      )}

      <!-- Content Overlay -->
      <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
        <h3 class:list={[
          "font-serif font-bold leading-tight mb-2 text-balance",
          featured ? "text-2xl md:text-4xl" : "text-xl"
        ]}>
          {post.title}
        </h3>
        {featured && post.excerpt && (
          <p class="text-white/80 line-clamp-2 mb-3 hidden md:block">
            {post.excerpt}
          </p>
        )}
        <time class="text-white/60 text-sm">{formattedDate}</time>
      </div>
    </div>
  </a>
</article>
